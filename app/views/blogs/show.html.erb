<div class="container">
    <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
        <h3>ブログ詳細</h3>
        <div class="row">
            <div class="blog-avatar">
                <%= profile_img(@blog.user) if profile_img(@blog.user) %>
            </div>
            <h3><strong><%= simple_format(@blog.title) %></strong></h3>
            <br>
            <div class="blog_user_name">投稿日: <%= localize(@blog.created_at, format: :default) %> 投稿者: <%= @blog.user.name %></div>
            <% if @blog.created_at < @blog.updated_at %>
                <div class="blog_user_name">(最終更新日: <%= localize(@blog.updated_at, format: :default) %>)</div>
            <% end %>
            <%= simple_format(@blog.content) %>
            <br>
        </div>
        <%= link_to "一覧へもどる", blogs_path, class: 'btn btn-primary btn-sm' %>
    </div>
</div>
