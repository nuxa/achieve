<div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="left">

        <p>
        <h3>依頼人:</h3>
        <% if @submit_request.charge_id == current_user.id %>
            <td>(自分)</td>
        <% else %>
            <td><%= @submit_request.charger.name %></td>
        <% end %>
        </p>

        <p>
        作成日：<%= @submit_request.created_at.strftime("%y/%m/%d") %>
        </p>

        <p>
        <h3>タイトル:</h3>
        <%= @submit_request.task.title %>
        </p>

        <p>
        <h3>メッセージ:</h3>
        <%= @submit_request.message %>
        </p>

        <p>
        <h3>締め切り:</h3>
        <%= @submit_request.task.deadline.strftime("%Y/%m/%d %R") %>
        </p>

        <p>
        <h3>依頼人:</h3>
        <%= @submit_request.charger.name %>
        </p>

        <p>
        <h3>完了ステータス:</h3>
        <%= done_display_name(@submit_request.task.done) %>
        </p>

        <p>
        <h3>状態:</h3>
        <%= status_display_name(@submit_request.status) %>
        </p>
    </div>

<%= link_to '戻る', user_submit_requests_path(current_user), class: 'btn btn-default' %>
</div>
