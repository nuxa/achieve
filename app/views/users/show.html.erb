<div class="user-page">
    <div class="container">
        <div class="row">
            <div class="container-child col-md-2 col-md-offset-5 col-sm-4 col-sm-offset-4 col-xs-6 col-xs-offset-3">
                <h3><%= @user.name %></h3>
                <%= profile_img(@user) %>
                <br>
                <%= render 'follow_form', user: @user %>
            </div>
        </div>
        <br>
        <div class="row">
            <h2>フォロー：<%= @followed_users.count %>人</h2>
            <% @followed_users.each do |follows| %>
                <div class="container-child col-md-2 col-sm-3 col-xs-4 ">
                    <%= profile_img(follows) %>
                    <p><%= follows.email %></p>
                    <%= render 'follow_form', user: follows %>
                </div>
            <% end %>
        </div>
        <div class="row">
            <h2>フォロワー：<%= @followers.count %>人</h2>
            <% @followers.each do |follower| %>
                <div class="container-child col-md-2 col-sm-3 col-xs-4 ">
                    <%= profile_img(follower) %>
                    <p><%= follower.email %></p>
                    <%= render 'follow_form', user: follower %>
                </div>
            <% end %>
        </div>
    </div>
</div>
